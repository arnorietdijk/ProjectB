<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewFood"
        android:layout_width="216dp"
        android:layout_height="149dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="145dp"
        android:layout_marginRight="145dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="209dp"
        android:layout_height="35dp"
        android:layout_below="@+id/imageViewFood"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="73dp"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="193dp"
        android:layout_marginRight="193dp"
        android:text="Title"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtDes"
        android:layout_width="209dp"
        android:layout_height="35dp"
        android:layout_below="@+id/txtTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="99dp"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="214dp"
        android:layout_marginRight="214dp"
        android:text="Description"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtLoc"
        android:layout_width="209dp"
        android:layout_height="35dp"
        android:layout_below="@+id/txtDes"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="231dp"
        android:layout_marginRight="231dp"
        android:text="Location"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnShare"
        android:layout_width="135dp"
        android:layout_height="63dp"
        android:layout_below="@+id/txtLoc"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="223dp"
        android:layout_marginRight="223dp"
        android:layout_marginBottom="300dp"
        android:text="Share" />
</RelativeLayout>